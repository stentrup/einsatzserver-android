    <color name="text_color">#111111</color>
    <style name="Theme.Einsatzserver" parent="@style/Theme.GreenDroid.NoTitleBar">
        <item name="gdActionBarBackground">@color/gd_action_bar_tint</item>
    </style>
    <style name="Font.Details" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Font.Details.Bold" parent="@style/Font.Details">
        <item name="android:textStyle">bold</item>
    </style>
</resources>
