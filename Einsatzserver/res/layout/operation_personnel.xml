<?xml version="1.0" encoding="utf-8"?>

<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/horizontalScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
<ScrollView 
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp" >
<TableLayout
    android:id="@+id/personnelTableLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <TableRow
        android:id="@+id/tableHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/tableHeaderState"
            style="@style/Font.Details.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/operation.personnel.state" />
        <TextView
            android:id="@+id/tableHeaderDivision"
            style="@style/Font.Details.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/operation.personnel.division" />
        <TextView
            android:id="@+id/tableHeaderSurname"
            style="@style/Font.Details.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/operation.personnel.surname" />
        <TextView
            android:id="@+id/tableHeaderName"
            style="@style/Font.Details.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/operation.personnel.name" />
        <TextView
            android:id="@+id/tableHeaderQualification"
            style="@style/Font.Details.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/operation.personnel.qualification" />
        <TextView
            android:id="@+id/tableHeaderComment"
            style="@style/Font.Details.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/operation.personnel.comment" />
    </TableRow>
</TableLayout>
    </LinearLayout>
</ScrollView>


    </LinearLayout>
</HorizontalScrollView>

